!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{content: 'width=device-width, initial-scale=1.0, minimum-scale=1.0', name: 'viewport'}
    %title TheShoWatch
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application'
    = javascript_pack_tag 'application'
  %body
    - if mobile_device?
      #mobile-wrapper
        #sidebar-wrapper
          = render partial: 'shared/mobile/sidebar'
        #navbar-wrapper
          %nav.nav#top-menu
            .container
              %i.fas.fa-bars.navbar-brand.menu-toggle
              = link_to 'TheShoWatch', root_path, class: "navbar-brand"
              - if current_user
                .acc-menu.dropdown
                  %a{href: '#', 'data-toggle': 'dropdown'}
                    .thumb-avatar{ style: "background-image: url(#{image_path('user.svg')})" }
                  %ul.dropdown-menu.dropdown-menu-right
              - else
                = link_to 'Войти', login_path
        #page-content-wrapper
          .main-content-wrapper
            = yield
    - else
      %nav.navbar
        .container
          .navbar-nav
            = link_to 'TheShoWatch', root_path, class: "navbar-brand"
            = link_to 'Сериалы', '#', class: 'nav-item'
            .navbar-nav--right
              - if current_user
                %span.nav-item= current_user.email
                = link_to 'Выйти', logout_path, method: :delete, class: 'nav-item'
              - else
                = link_to 'Войти', login_path, class: 'nav-item'
                = link_to 'Зарегистрироваться', new_user_registration_path, class: 'nav-item'
      .main-content-wrapper
        = yield
    %footer.footer
      .container
        © 2019
